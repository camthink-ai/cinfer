{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "module": "ESNext",
        "target": "ES2020",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src", "package.json"],
    "exclude": ["node_modules", "dist"]
}
